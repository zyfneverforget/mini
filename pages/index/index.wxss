/**index.wxss**/
.container{
  font-size: 28rpx;
}
.select-langs {
  color: #8995a1;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  background: rgb(246, 248, 249);
}
.select-langs .icon-down {
  color: #8995a1;
  font-size: 20rpx;
}
.text-title{
  color: #8995a1;
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.text-area{
  background: rgb(246, 248, 249);
}
.input-area {
  position: relative;
}
.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}
.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 40rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}
.input-area .icon-fork {
  position: absolute;
  right: 12rpx;
  top: 35rpx;
  z-index: 100;
  font-size: 30rpx;
  color: #888;
}

.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}

.input-area .text-title {
  font-size: 28rpx;
  color: #8995a1;
}

.text-area .text-result {
  padding: 20rpx 40rpx;
  background: white;
}